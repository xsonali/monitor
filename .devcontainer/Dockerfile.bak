FROM ubuntu:22.04

# Install Terraform separately or add the HashiCorp repo to install terraform
# Then install Azure CLI as per the Microsoft instructions

RUN apt-get update && apt-get install -y curl bash python3 python3-pip

# Install Azure CLI (from Microsoft docs)
RUN curl -sL https://aka.ms/InstallAzureCLIDeb | bash

# Install terraform (example)
RUN curl -fsSL https://apt.releases.hashicorp.com/gpg | apt-key add -
RUN apt-add-repository "deb [arch=amd64] https://apt.releases.hashicorp.com $(lsb_release -cs) main"
RUN apt-get update && apt-get install terraform
